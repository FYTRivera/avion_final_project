<div class="login-wrapper">
<h2 class="form-login"><strong>Log in</strong></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-input" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "login-input"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "login-form-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>